<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!-- Style of tabLayout-->
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/santander_default</item>
        <item name="tabBackground">@drawable/selector_tablayout</item>
        <item name="tabIndicatorColor">@color/santander_opacity</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextAppearance">@android:style/TextAppearance.Widget.TabWidget</item>
        <item name="tabTextColor">@android:color/white</item>
        <item name="android:fontFamily">@font/dinpro_medium</item>
    </style>

    <!-- Style of toolbar-->
    <style name="ToolBarStyle" parent="">
        <item name="android:background">@android:color/white</item>
    </style>

    <!-- Style of button-->
    <style name="CustomButton" parent="">
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/dinpro_medium</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Widget.Button</item>
    </style>

    <!-- Fonts -->
    <style name="Medium">
        <item name="fontFamily">@font/dinpro_medium</item>
    </style>

    <style name="Regular">
        <item name="fontFamily">@font/dinpro_regular</item>
    </style>

    <style name="Helvetica">
        <item name="fontFamily">helvetica</item>
    </style>


