<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/risk_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageRisk1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_keyboard_arrow_down_white_24dp"
            android:tint="@color/santander_gray"
            android:visibility="gone" />

        <View
            android:id="@+id/risk1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/risk"
            android:background="@drawable/corner_left" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/risk_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageRisk2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_keyboard_arrow_down_white_24dp"
            android:tint="@color/santander_gray"
            android:visibility="gone" />

        <View
            android:id="@+id/risk2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="#4AC16C" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/risk_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageRisk3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_keyboard_arrow_down_white_24dp"
            android:tint="@color/santander_gray"
            android:visibility="gone" />

        <View
            android:id="@+id/risk3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/risk"
            android:background="#FFC011" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/risk_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageRisk4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_keyboard_arrow_down_white_24dp"
            android:tint="@color/santander_gray"
            android:visibility="gone" />

        <View
            android:id="@+id/risk4"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/risk"
            android:background="#FF742C" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/risk_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageRisk5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_keyboard_arrow_down_white_24dp"
            android:tint="@color/santander_gray"
            android:visibility="gone" />

        <View
            android:id="@+id/risk5"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/risk"
            android:background="@drawable/corner_right" />
    </LinearLayout>
</LinearLayout>