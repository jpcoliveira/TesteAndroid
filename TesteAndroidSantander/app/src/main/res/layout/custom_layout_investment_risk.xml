<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/risk_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageVeryLowRisk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_keyboard_arrow_down_white_24dp"
            android:tint="@color/santander_gray"
            android:visibility="gone" />

        <View
            android:id="@+id/veryLowRisk"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/risk"
            android:background="@drawable/corner_left" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/risk_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageLowRisk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_keyboard_arrow_down_white_24dp"
            android:tint="@color/santander_gray"
            android:visibility="gone" />

        <View
            android:id="@+id/lowRisk"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/risk"
            android:background="@color/low_risk" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/risk_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageModerateRisk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_keyboard_arrow_down_white_24dp"
            android:tint="@color/santander_gray"
            android:visibility="gone" />

        <View
            android:id="@+id/moderateRisk"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/risk"
            android:background="@color/moderate_risk" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/risk_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageHighRisk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_keyboard_arrow_down_white_24dp"
            android:tint="@color/santander_gray"
            android:visibility="gone" />

        <View
            android:id="@+id/highRisk"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/risk"
            android:background="@color/high_risk" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageVeryHighRisk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_keyboard_arrow_down_white_24dp"
            android:tint="@color/santander_gray"
            android:visibility="gone" />

        <View
            android:id="@+id/veryHighRisk"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/risk"
            android:background="@drawable/corner_right" />
    </LinearLayout>
</LinearLayout>